	<function>
		<description>
		날짜(Date) 가감하기
		</description>
		<name>dateAdd</name>
		<function-class>
		egovframework.common.util.StringUtil
		</function-class>
		<function-signature>
		java.util.Date dateAdd( java.util.Date, java.lang.String, int )
		</function-signature>
		<example>
		${hana:dateAdd(item.regSd, "d", 10)}
